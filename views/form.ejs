<!DOCTYPE html>
<html>
<head>
    <title>Placemebt </title>

    <!-- FAVICON -->
    <!-- <link rel="icon" type="image/png" href="images/favicon.png"> -->
    <link rel="icon" type="image/png" sizes="32x32" href="images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon-16x16.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="css/Form.css">
</head>
<body> 
     <div class="wrapper">
         <div class="headline">
             <h1 style="text-transform: uppercase;"> Welcome to placement helper</h1><br>
             <h3 style="text-transform: uppercase; color: red;"> Kindally login or signup here</h3>
         </div>
         <form class="form" method="post" action="#">
            <div class="signup">
                <fieldset>
                    <legend>ENTER SIGNUP DETAILS</legend>
                <div class="form-group">
                 <label>Enter Your Full Name</label>  <input type="text" placeholder="Full name" required="">
                </div>
                <div class="form-group">
                    <label>Enter Your Email address </label>   <input type="email" placeholder="random@gnu.ac.in" required="">
                </div>
                <div class="form-group">
                    <label>Enter your Enrollment address</label>    <input type="text" placeholder="Enrollment no" required="">
                </div>
                <div class="form-group">
                    <label>Enter your Date Of Birth</label>  <input type="date" placeholder="Date of Birth" required="">
                </div>
                <div class="form-group">
                    <label>Enter Secure Password</label>    <input type="password" placeholder="Password" required="">
                </div>
                <div class="form-group">
                    <label>Confirm password</label>    <input type="password" placeholder=" confirm Password" required="">
                </div>
            </fieldset>
                <button type="button" class="btn" id="btnNextSignup">Next</button>
                <div class="account-exist">
                    Already have an account? <a href="#" id="login">Login</a>
                </div>
            </div>
            
            <div class="signin"> 
                <fieldset>
                    <legend>ENTER LOGIN DETAILS</legend>
                <div class="form-group">
                    <label>Enter Your Email</label>           <input type="email" placeholder="Email" required="">
                </div>
                <div class="form-group">
                    <label>Enter Your Password</label>     <input type="password" placeholder="Password" required="">
                </div>
            </fieldset>
                <button type="submit" class="btn" id="btnLogin">Login</button>
                <div class="account-exist">
                    Create a new account? <a href="#" id="signup">Signup</a>
                </div>
               
            </div>
            
            <div class="next inActive">
                <fieldset>
                    <legend>ACEDMIC INFORMATION</legend>
             
                    <div class="form-group">
                        <label>Enter class 10th Marks</label> <input type="number" placeholder="Enter CGPA or PERCENTAGE" required>
                    </div>
                    <div class="form-group">
                        <label>Enter class 12th Marks</label>  <input type="number" placeholder="Enter CGPA or PERCENTAGE" required>
                    </div>
                    <div class="form-group">
                        <label>Enter Your Current CGPA</label>  <input type="number" placeholder="Enter CGPA" required>
                    </div>
            

            </fieldset>
                <button type="button" class="btn" id="btnNext2">Next</button>
            </div>
            <div class="next inActive">
                <fieldset>
                <legend>SKILLS</legend>
                <div class="form-group">
                <div id="inputContainer">
                    <input type="text" placeholder="for Example: Web Develeper" required>
                </div>
                <br>
                <button type="button" id="addInputButton">
                    <span class="plus">+</span>
                </button>
            </div>

            </fieldset>
                <button type="button" class="btn" id="btnNext3">Next</button>
            </div>
            <div class="next inActive">
                <fieldset>
                <legend>CONTACT DETAILS</legend>
                <div class="form-group">
                    <label>Enter Your Mobile number</label>    <input type="text" placeholder="Don't Use Area Code(+91)" required>
                </div>
                <div class="form-group">
                    <label>Enter Your Alternate Mobile Number(optional)</label> <input type="text" placeholder="optional">
                </div>
                <div class="form-group">
                    <label>Enter Your Permanent Address</label> <input type="text" placeholder="Write Full Address" required>
                </div>
            </fieldset>
                <button type="button" class="btn" id="btnNext4">Next</button>
            </div>
            <div class="next inActive">
                <fieldset>
                <legend>Social Media</legend>
                <div class="form-group">
                    <label>Enter Your Linkedin ID</label>     <input type="text" placeholder="Linkedin id" required>
                </div>
                <div class="form-group">
                    <label>Enter Your Github Id</label>     <input type="text" placeholder="Github" required>
                </div>
                <div class="form-group">
                    <label>Other</label>     <input type="text" placeholder="Twitter,Peerlist...">
                </div>
            </fieldset>
                <button type="button" class="btn" id="btnNext5">Next</button>
            </div>
            <div class="next inActive">
                <fieldset>
                <legend>UPLOAD</legend>
                <div class="form-group">
                    <label for="profilePhoto">Upload Your Profile Photo:</label>
                    <input type="file" id="profilePhoto" accept="image/*" required>
                </div>
            
                <div class="form-group">
                    <label for="pdfFile">Upload Your Resume(PDF):</label>
                    <input type="file" id="pdfFile" accept=".pdf" required>
                </div>
            </fieldset>
                <button type="submit" class="btn">Submit</button>
            </div>
         </form>
     </div>
<script>
    // Get the necessary elements
    const inputContainer = document.getElementById('inputContainer');
    const addInputButton = document.getElementById('addInputButton');
    let inputCount = 1;

    // Function to add a new input field
    function addInputField() {
        inputCount++;
        const newInput = document.createElement('input');
        newInput.type = 'text';
        newInput.placeholder = `Skill ${inputCount}`;
        newInput.required = true;
        inputContainer.appendChild(newInput);
    }

    // Event listener for the addInputButton click
    addInputButton.addEventListener('click', addInputField);
</script>
    <script src="js/Form.js"></script>
</body>
</html>



