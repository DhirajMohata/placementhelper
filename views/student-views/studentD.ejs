    <script>
      function showEligibleJobs(toggle) {
        if (toggle.checked) {
          document.querySelectorAll(".box").forEach(function(box) {
            if (box.classList.contains("eligible")) {
              box.style.display = "block";
            } else {
              box.style.display = "none";
            }
          });
        } else {
          document.querySelectorAll(".box").forEach(function(box) {
            box.style.display = "block";
          });
        }
      }
    </script>
